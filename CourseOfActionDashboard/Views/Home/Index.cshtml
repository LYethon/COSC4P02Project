@{
    ViewData["Title"] = "Home Page";
}

    <style>
        .cs_title {
            font-size: 120%;
        }

        .cs_baritem {
            font-size: 90%;
            max-width: 110px;
            margin-right: -10px;
            margin-top: 5px;
            right: -60px;
            cursor: pointer;
        }

            .cs_baritem:hover {
                transition: 0.3s;
                color: #3053a1;
            }

        .year {
            margin: auto;
            color: #3053a1;
        }

        .year_container {
            background-color: #daf3f5;
            padding-bottom: 15px;
            border-radius: 10px;
        }

        .remove_btn {
            font-weight: bold;
            color: dimgrey;
            margin-top: -2px;
            margin-left: -7px;
            cursor: pointer;
        }

            .remove_btn:hover {
                color: #e6393f;
                transition: 0.3s;
                cursor: pointer;
            }

        .credit_box {
            font-size: 90%;
            padding: 2px 4px;
            margin: 5px -5px;
            cursor: pointer;
            background-color: white;
        }

        .cr_select {
            border: 1px solid grey;
            border-radius: 5px;
        }

        .cr_unselect {
            color: grey;
            border: 1px dashed grey;
            border-radius: 5px;
        }
    </style>

    <div class="row">
        <div class="container-fluid" style="">
            <!--Header and Progress Bar-->
            <text style="font-size:x-large;">Welcome, Name!</text>

            <!--Progress Bar Legend-->
            <div class="legendarea" style="padding-top:3%;">
                <table style="width:400px;">
                    <tc>
                        <td style="background-color:#00cc00;width:30px;border-radius:5px;">&nbsp;</td>
                        <td>  Completed  </td>
                    </tc>
                    <tc>
                        <td style="background-color:#ffcc00;width:30px;border-radius:5px;">&nbsp;</td>
                        <td>  Planned  </td>
                    </tc>
                    <tc>
                        <td style="background-color:lightcoral;width:30px;border-radius:5px;">&nbsp;</td>
                        <td>  Required  </td>
                    </tc>
                </table>
            </div>

            <!--Progress Bar-->
            <div class="progressarea" style="padding-top:2.5%;">
                <div class="progress" style="background-color:lightcoral">
                    <div class="progress-bar-striped bg-success" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar-striped bg-warning" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>

            <!--Credits Statistics-->
            <div class="statsarea1" style="padding:2.5%;">
                <div class="statsarea2" style="background-color:lightgrey;border-radius:5px;">
                    <div class="row">
                        <div class="col" style="border:solid;border-radius:5px;background-color:lightgray;">
                            <table style="width:100%;margin:auto;">
                                <tr style="font-weight:bold;">
                                    <tc><td>Credits</td></tc>
                                    <tc><td>Planned</td></tc>
                                    <tc><td>Completed</td></tc>
                                </tr>
                                <tr>
                                    <tc><td style="">Major</td></tc>
                                    <tc><td style="">12/32</td></tc>
                                    <tc><td style="">6/32</td></tc>
                                </tr>
                                <tr>
                                    <tc><td style="">Minor</td></tc>
                                    <tc><td style="">3/5</td></tc>
                                    <tc><td style="">2/5</td></tc>
                                </tr>
                                <tr>
                                    <tc><td style="">Social Science</td></tc>
                                    <tc><td style="">1/1</td></tc>
                                    <tc><td style="">0.5/1</td></tc>
                                </tr>
                                <tr>
                                    <tc><td style="">Humanities</td></tc>
                                    <tc><td style="">1/1</td></tc>
                                    <tc><td style="">1/1</td></tc>
                                </tr>
                            </table>
                        </div>

                        <div class="col" style="border:solid;border-radius:5px;background-color:lightgray;">
                            <table style="width:100%;margin:auto;">
                                <tr style="font-weight:bold;">
                                    <tc><td>Credits</td></tc>
                                    <tc><td>Planned</td></tc>
                                    <tc><td>Completed</td></tc>
                                </tr>
                                <tr>
                                    <tc><td style="">1alpha00-1alpha99</td></tc>
                                    <tc><td style="">5/10</td></tc>
                                    <tc><td style="">5/10</td></tc>
                                </tr>
                                <tr>
                                    <tc><td style="">2alpha00-2alpha99</td></tc>
                                    <tc><td style="">5/10</td></tc>
                                    <tc><td style="">5/10</td></tc>
                                </tr>
                                <tr>
                                    <tc><td style="">3alpha00-3alpha99</td></tc>
                                    <tc><td style="">5/10</td></tc>
                                    <tc><td style="">5/10</td></tc>
                                </tr>
                                <tr>
                                    <tc><td style="">4alpha00-4alpha99</td></tc>
                                    <tc><td style="">5/10</td></tc>
                                    <tc><td style="">5/10</td></tc>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

